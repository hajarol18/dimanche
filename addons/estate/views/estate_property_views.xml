<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Min Living Area" filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <filter name="available" string = 'Available' domain="['|', ('state', '=', 'new'), ('state', '=', 'offer received')]"/>
                
                <group string="Group By">
                    <filter name="By Postcode" context="{'group_by':'postcode'}"/>
                </group> 
            </search>
        </field>
    </record>
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type" drag_and_drop="false">
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <strong><field name="name"/></strong>
                            <div>Expected Price: <field name="expected_price"/></div>
                            <div t-if="record.state and record.state.raw_value == 'offer received'">
                                <div>Best Price: <field name="best_price"/></div>
                            </div>
                            <div t-if="record.state and record.state.raw_value == 'offer accepted'">
                                <div>Selling Price: <field name="selling_price"/></div>
                            </div>
                            <field name="property_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="estate_property_view_list" model="ir.ui.view">
        <field name="name">estate.property.list</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <list string="Properties"
              decoration-success="has_offer_received"
              decoration-bf="has_offer_accepted"
              decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="property_type"/>
                <field name="postcode"/>
                <field name="property_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" invisible="1"/>
                <field name="has_offer_received" invisible="1"/>
                <field name="has_offer_accepted" invisible="1"/>
                <field name="state" invisible="1"/>
            </list>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <header>
                    <button name="cancel" type="object" string="Cancel" invisible= "not can_cancel"/>
                    <button name="sold" type="object" string="Sold" invisible= "not can_mark_sold"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>
                </header>
                <sheet>
                    <field name = "name"/>
                    <field name="property_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <field name="property_type" options="{'no_create': True, 'no_open': True}" />
                        <field name="postcode"/>
                        <field name="expected_price"/>
                        <field name="best_price"/>
                        <field name="selling_price"/>
                        <field name="date_availability"/>
                    </group>
                    <notebook>
                        <page string="Description">
                        <group>
                            <field name="description"/>
                            <field name="bedrooms"/>
                            <field name="living_area"/>
                            <field name="facades"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="garden_area" invisible= "not garden"/>
                            <field name="garden_orientation" invisible= "not garden"/>
                            <field name="total_area"/>
                        </group>
                        </page>
                        <page string = "Other info">
                            <group>
                                <field name="salesperson"/>
                                <field name="buyer"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <group>
                                <field name="offer_ids" readonly = "cannot_add" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="estate_property_view_search"/>
        <field name="context">{'search_default_available': True}</field>
    </record>
</odoo>
