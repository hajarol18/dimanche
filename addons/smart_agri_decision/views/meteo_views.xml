<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue liste pour la météo -->
        <record id="view_smart_agri_meteo_list" model="ir.ui.view">
            <field name="name">smart.agri.meteo.list</field>
            <field name="model">smart_agri_meteo</field>
            <field name="arch" type="xml">
                <list string="Données Météo">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="temperature_min"/>
                    <field name="temperature_max"/>
                    <field name="precipitation"/>
                    <field name="humidite"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour la météo -->
        <record id="view_smart_agri_meteo_form" model="ir.ui.view">
            <field name="name">smart.agri.meteo.form</field>
            <field name="model">smart_agri_meteo</field>
            <field name="arch" type="xml">
                <form string="Données Météo">
                    <sheet>
                        <group>
                            <group string="Informations de base">
                                <field name="name"/>
                                <field name="date"/>
                            </group>
                            <group string="Températures">
                                <field name="temperature_min"/>
                                <field name="temperature_max"/>
                                <field name="temperature_moyenne"/>
                            </group>
                        </group>
                        <group>
                            <group string="Conditions atmosphériques">
                                <field name="humidite"/>
                                <field name="precipitation"/>
                                <field name="ensoleillement"/>
                            </group>
                            <group string="Vent">
                                <field name="vitesse_vent"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir la météo -->
        <record id="action_smart_agri_meteo" model="ir.actions.act_window">
            <field name="name">Données Météo</field>
            <field name="res_model">smart_agri_meteo</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ajoutez vos premières données météo
                </p>
                <p>
                    Les données météorologiques sont essentielles pour la planification agricole.
                </p>
            </field>
        </record>
    </data>
</odoo>
