<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des sc√©narios climatiques -->
    <record id="view_smart_agri_scenario_climatique_list" model="ir.ui.view">
        <field name="name">smart.agri.scenario.climatique.list</field>
        <field name="model">smart_agri_scenario_climatique</field>
        <field name="arch" type="xml">
            <list string="Sc√©narios Climatiques" decoration-success="state == 'simulation_terminee'" decoration-warning="state == 'simulation_en_cours'" decoration-danger="state == 'brouillon'">
                <field name="name"/>
                <field name="code"/>
                <field name="type_scenario"/>
                <field name="intensite"/>
                <field name="probabilite_occurrence"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="impact_rendement"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire des sc√©narios climatiques -->
    <record id="view_smart_agri_scenario_climatique_form" model="ir.ui.view">
        <field name="name">smart.agri.scenario.climatique.form</field>
        <field name="model">smart_agri_scenario_climatique</field>
        <field name="arch" type="xml">
            <form string="Sc√©nario Climatique">
                <header>
                    <button name="action_lancer_simulation" string="üöÄ Lancer Simulation" type="object" class="btn-primary" invisible="state not in ['brouillon','valide']"/>
                    <button name="action_generer_alertes" string="‚ö†Ô∏è G√©n√©rer Alertes" type="object" class="btn-secondary" invisible="state != 'simulation_terminee'"/>
                    <field name="state" widget="statusbar" statusbar_visible="brouillon,valide,simulation_en_cours,simulation_terminee"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du sc√©nario..."/>
                        </h1>
                        <h3>
                            <field name="code" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group>
                            <field name="exploitation_id" options="{'no_create': True}"/>
                            <field name="type_scenario"/>
                            <field name="intensite"/>
                            <field name="probabilite_occurrence"/>
                        </group>
                        <group>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                            <field name="duree_jours" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Param√®tres Climatiques" name="parametres">
                            <group>
                                <group string="Temp√©ratures">
                                    <field name="temperature_base"/>
                                    <field name="variation_temperature"/>
                                    <field name="temperature_min"/>
                                    <field name="temperature_max"/>
                                </group>
                                <group string="Pr√©cipitations">
                                    <field name="precipitation_base"/>
                                    <field name="variation_precipitation"/>
                                    <field name="precipitation_min"/>
                                    <field name="precipitation_max"/>
                                </group>
                            </group>
                            
                            <group>
                                <group string="Humidit√©">
                                    <field name="humidite_base"/>
                                    <field name="variation_humidite"/>
                                    <field name="humidite_min"/>
                                    <field name="humidite_max"/>
                                </group>
                                <group string="Vent">
                                    <field name="vent_base"/>
                                    <field name="variation_vent"/>
                                    <field name="vent_min"/>
                                    <field name="vent_max"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Impact Agricole" name="impact">
                            <group>
                                <group>
                                    <field name="impact_rendement"/>
                                    <field name="impact_qualite"/>
                                </group>
                                <group>
                                    <field name="cultures_affectees" widget="many2many_tags"/>
                                    <field name="parcelles_affectees" widget="many2many_tags"/>
                                </group>
                            </group>
                            
                            <group string="Mesures d'Adaptation">
                                <field name="mesures_adaptation" nolabel="1"/>
                                <field name="actions_preventives" nolabel="1"/>
                                <field name="actions_curatives" nolabel="1"/>
                            </group>
                        </page>
                        
                        <page string="Simulation" name="simulation">
                            <group>
                                <group>
                                    <field name="simulation_lancee" readonly="1"/>
                                    <field name="date_simulation" readonly="1"/>
                                </group>
                                <group>
                                    <field name="state" readonly="1"/>
                                </group>
                            </group>
                            
                            <field name="resultats_simulation" nolabel="1" readonly="1"/>
                        </page>
                        
                        <page string="Description" name="description">
                            <field name="description" nolabel="1"/>
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue recherche des sc√©narios climatiques -->
    <record id="view_smart_agri_scenario_climatique_search" model="ir.ui.view">
        <field name="name">smart.agri.scenario.climatique.search</field>
        <field name="model">smart_agri_scenario_climatique</field>
        <field name="arch" type="xml">
            <search string="Rechercher Sc√©narios Climatiques">
                <field name="name"/>
                <field name="code"/>
                <field name="exploitation_id"/>
                <field name="type_scenario"/>
                <field name="intensite"/>
                
                <filter string="Simulations Termin√©es" name="terminees" domain="[('state', '=', 'simulation_terminee')]"/>
                <filter string="En Cours" name="en_cours" domain="[('state', '=', 'simulation_en_cours')]"/>
                <filter string="Brouillons" name="brouillons" domain="[('state', '=', 'brouillon')]"/>
                <filter string="Valid√©s" name="valides" domain="[('state', '=', 'valide')]"/>
                
                <separator/>
                <filter string="S√©cheresse" name="secheresse" domain="[('type_scenario', '=', 'secheresse')]"/>
                <filter string="Canicule" name="canicule" domain="[('type_scenario', '=', 'canicule')]"/>
                <filter string="Pluie Abondante" name="pluie" domain="[('type_scenario', '=', 'pluie_abondante')]"/>
                <filter string="Hiver Rigoureux" name="hiver" domain="[('type_scenario', '=', 'hiver_rigoureux')]"/>
                
                <separator/>
                <filter string="Impact N√©gatif" name="impact_negatif" domain="[('impact_rendement', '&lt;', 0)]"/>
                <filter string="Impact Positif" name="impact_positif" domain="[('impact_rendement', '&gt;', 0)]"/>
                
                <group expand="0" string="Grouper Par">
                    <filter string="Type de Sc√©nario" name="group_type" context="{'group_by': 'type_scenario'}"/>
                    <filter string="Intensit√©" name="group_intensite" context="{'group_by': 'intensite'}"/>
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Exploitation" name="group_exploitation" context="{'group_by': 'exploitation_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les sc√©narios climatiques -->
    <record id="action_smart_agri_scenario_climatique" model="ir.actions.act_window">
        <field name="name">Sc√©narios Climatiques</field>
        <field name="res_model">smart_agri_scenario_climatique</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_smart_agri_scenario_climatique_search"/>
        <field name="context">{'search_default_valides': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau sc√©nario climatique
            </p>
            <p>
                D√©finissez des sc√©narios climatiques personnalis√©s pour simuler les impacts sur votre exploitation.
            </p>
        </field>
    </record>

    <!-- Menu pour les sc√©narios climatiques supprim√© - d√©j√† d√©fini dans main_menu.xml -->

</odoo>