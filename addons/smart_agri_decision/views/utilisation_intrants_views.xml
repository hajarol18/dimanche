<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <!-- Vue liste pour les utilisations d'intrants -->
        <record id="view_utilisation_intrants_list" model="ir.ui.view">
            <field name="name">smart.agri.utilisation.intrants.list</field>
            <field name="model">smart_agri_utilisation_intrant</field>
            <field name="arch" type="xml">
                <list string="Utilisations d'Intrants">
                    <field name="name"/>
                    <field name="intrant_id"/>
                    <field name="parcelle_id"/>
                    <field name="date_utilisation"/>
                    <field name="quantite_utilisee"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour les utilisations d'intrants -->
        <record id="view_utilisation_intrants_form" model="ir.ui.view">
            <field name="name">smart.agri.utilisation.intrants.form</field>
            <field name="model">smart_agri_utilisation_intrant</field>
            <field name="arch" type="xml">
                <form string="Utilisation d'Intrant">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'utilisation"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations de base">
                                <field name="name"/>
                                <field name="intrant_id"/>
                                <field name="parcelle_id"/>
                                <field name="exploitation_id"/>
                            </group>
                            <group string="Détails">
                                <field name="date_utilisation"/>
                                <field name="quantite_utilisee"/>
                                <field name="unite_quantite"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Informations">
                                <group>
                                    <field name="description"/>
                                    <field name="notes"/>
                                </group>
                            </page>
                            <page string="Efficacité">
                                <group>
                                    <field name="efficacite"/>
                                    <field name="observations"/>
                                </group>
                            </page>
                            <page string="Conditions météo">
                                <group>
                                    <field name="conditions_meteo"/>
                                    <field name="temperature_application"/>
                                    <field name="humidite_application"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir les utilisations d'intrants -->
        <record id="action_utilisation_intrants" model="ir.actions.act_window">
            <field name="name">Utilisations d'Intrants</field>
            <field name="res_model">smart_agri_utilisation_intrant</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première utilisation d'intrant
                </p>
                <p>
                    Suivez l'utilisation des intrants sur vos parcelles.
                </p>
            </field>
        </record>
    
</odoo>