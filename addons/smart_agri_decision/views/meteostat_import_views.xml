<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <!-- Vue liste pour les imports Meteostat -->
        <record id="view_meteostat_import_list" model="ir.ui.view">
            <field name="name">smart.agri.meteostat.import.list</field>
            <field name="model">smart_agri_meteostat_import</field>
            <field name="arch" type="xml">
                <list string="Imports Meteostat">
                    <field name="name"/>
                    <field name="date_import"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour les imports Meteostat -->
        <record id="view_meteostat_import_form" model="ir.ui.view">
            <field name="name">smart.agri.meteostat.import.form</field>
            <field name="model">smart_agri_meteostat_import</field>
            <field name="arch" type="xml">
                <form string="Import Meteostat">
                    <header>
                        <button name="importer_donnees_meteostat" type="object" string="Importer" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="planifie,en_cours,termine"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'import"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations de base">
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                            <group string="Paramètres">
                                <field name="date_import"/>
                                <field name="state"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir les imports Meteostat -->
        <record id="action_meteostat_import" model="ir.actions.act_window">
            <field name="name">Imports Meteostat</field>
            <field name="res_model">smart_agri_meteostat_import</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier import Meteostat
                </p>
                <p>
                    Importez des données météorologiques depuis l'API Meteostat.
                </p>
            </field>
        </record>
    
</odoo>