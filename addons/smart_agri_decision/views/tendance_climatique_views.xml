<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <!-- Vue liste pour les tendances climatiques -->
        <record id="view_tendance_climatique_list" model="ir.ui.view">
            <field name="name">smart.agri.tendance.climatique.list</field>
            <field name="model">smart_agri_tendance_climatique</field>
            <field name="arch" type="xml">
                <list string="Tendances Climatiques">
                    <field name="name"/>
                    <field name="type_tendance"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="impact_agricole"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour les tendances climatiques -->
        <record id="view_tendance_climatique_form" model="ir.ui.view">
            <field name="name">smart.agri.tendance.climatique.form</field>
            <field name="model">smart_agri_tendance_climatique</field>
            <field name="arch" type="xml">
                <form string="Tendance Climatique">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la tendance"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations de base">
                                <field name="name"/>
                                <field name="type_tendance"/>
                                <field name="description"/>
                                <field name="exploitation_id"/>
                            </group>
                            <group string="Période d'analyse">
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                                <field name="duree_periode"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Analyse">
                                <group>
                                    <group string="Paramètres">
                                        <field name="parametres_analyses"/>
                                        <field name="source_donnees"/>
                                        <field name="qualite_donnees"/>
                                        <field name="rcp_scenario_id"/>
                                    </group>
                                    <group string="Impact">
                                        <field name="impact_agricole"/>
                                        <field name="cultures_favorisees"/>
                                        <field name="cultures_defavorisees"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Recommandations">
                                <field name="strategies_mitigation"/>
                                <field name="recommandations_adaptation"/>
                            </page>
                            <page string="Données">
                                <group>
                                    <group string="Températures">
                                        <field name="temperature_moyenne"/>
                                        <field name="temperature_min"/>
                                        <field name="temperature_max"/>
                                        <field name="tendance_temperature"/>
                                        <field name="indice_thermique"/>
                                    </group>
                                    <group string="Précipitations">
                                        <field name="precipitation_moyenne"/>
                                        <field name="precipitation_totale"/>
                                        <field name="tendance_precipitation"/>
                                        <field name="indice_pluviosite"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Autres paramètres">
                                        <field name="humidite_moyenne"/>
                                        <field name="tendance_humidite"/>
                                        <field name="vitesse_vent_moyenne"/>
                                        <field name="ensoleillement_moyen"/>
                                        <field name="indice_secheresse"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Localisation">
                                <group>
                                    <field name="zone_geographique"/>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            </page>
                            <page string="Documentation">
                                <field name="notes"/>
                                <field name="documentation"/>
                                <field name="nom_fichier_doc"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir les tendances climatiques -->
        <record id="action_tendance_climatique" model="ir.actions.act_window">
            <field name="name">Tendances Climatiques</field>
            <field name="res_model">smart_agri_tendance_climatique</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première analyse de tendance climatique
                </p>
                <p>
                    Analysez les tendances climatiques et leur impact sur l'agriculture.
                </p>
            </field>
        </record>
    
</odoo>