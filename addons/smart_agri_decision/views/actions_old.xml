<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- ======================================== -->
        <!-- ACTIONS COMPLÈTES POUR TOUS LES MODÈLES -->
        <!-- ======================================== -->
        
        <!-- Action pour les types de sol -->
        <record id="action_smart_agri_soil_type" model="ir.actions.act_window">
            <field name="name">Types de Sol</field>
            <field name="res_model">smart_agri_soil_type</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier type de sol
                </p>
                <p>
                    Définissez les caractéristiques de vos sols agricoles.
                </p>
            </field>
        </record>
        
        <!-- Action pour les exploitations -->
        <record id="action_smart_agri_exploitation" model="ir.actions.act_window">
            <field name="name">Exploitations</field>
            <field name="res_model">smart_agri_exploitation</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première exploitation
                </p>
                <p>
                    Gérez vos exploitations agricoles et leurs informations.
                </p>
            </field>
        </record>
        
        <!-- Action pour les parcelles -->
        <record id="action_smart_agri_parcelle" model="ir.actions.act_window">
            <field name="name">Parcelles</field>
            <field name="res_model">smart_agri_parcelle</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première parcelle
                </p>
                <p>
                    Géolocalisez et gérez vos parcelles agricoles.
                </p>
            </field>
        </record>
        
        <!-- Action pour les cultures -->
        <record id="action_smart_agri_culture" model="ir.actions.act_window">
            <field name="name">Cultures</field>
            <field name="res_model">smart_agri_culture</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première culture
                </p>
                <p>
                    Planifiez et suivez vos cultures par parcelle.
                </p>
            </field>
        </record>
        
        <!-- Action pour les interventions -->
        <record id="action_smart_agri_intervention" model="ir.actions.act_window">
            <field name="name">Interventions</field>
            <field name="res_model">smart_agri_intervention</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Planifiez votre première intervention
                </p>
                <p>
                    Organisez vos interventions agricoles (semis, irrigation, traitements).
                </p>
            </field>
        </record>
        
        <!-- Action pour les intrants -->
        <record id="action_smart_agri_intrants" model="ir.actions.act_window">
            <field name="name">Intrants</field>
            <field name="res_model">smart_agri_intrants</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier intrant
                </p>
                <p>
                    Gérez vos semences, engrais et autres intrants agricoles.
                </p>
            </field>
        </record>
        
        <!-- Action pour l'utilisation des intrants -->
        <record id="action_smart_agri_utilisation_intrant" model="ir.actions.act_window">
            <field name="name">Utilisation des Intrants</field>
            <field name="res_model">smart_agri_utilisation_intrant</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enregistrez votre première utilisation d'intrant
                </p>
                <p>
                    Suivez l'utilisation de vos intrants par parcelle et culture.
                </p>
            </field>
        </record>
        
        <!-- Action pour les données météo -->
        <record id="action_smart_agri_meteo" model="ir.actions.act_window">
            <field name="name">Données Météo</field>
            <field name="res_model">smart_agri_meteo</field>
            <field name="view_mode">list,form,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez vos données météorologiques
                </p>
                <p>
                    Analysez les conditions climatiques de vos parcelles.
                </p>
            </field>
        </record>
        
        <!-- Action pour l'import Meteostat -->
        <record id="action_smart_agri_meteostat_import" model="ir.actions.act_window">
            <field name="name">Import Meteostat</field>
            <field name="res_model">smart_agri_meteostat_import</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Lancez votre premier import Meteostat
                </p>
                <p>
                    Importez automatiquement les données météorologiques depuis Meteostat.
                </p>
            </field>
        </record>
        
        <!-- Action pour les alertes climatiques -->
        <record id="action_smart_agri_alerte_climatique" model="ir.actions.act_window">
            <field name="name">Alertes Climatiques</field>
            <field name="res_model">smart_agri_alerte_climatique</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez vos alertes climatiques
                </p>
                <p>
                    Surveillez les alertes de sécheresse, gel et canicule.
                </p>
            </field>
        </record>
        
        <!-- Action pour les tendances climatiques -->
        <record id="action_smart_agri_tendance_climatique" model="ir.actions.act_window">
            <field name="name">Tendances Climatiques</field>
            <field name="res_model">smart_agri_tendance_climatique</field>
            <field name="view_mode">list,form,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Analysez vos tendances climatiques
                </p>
                <p>
                    Visualisez l'évolution des conditions climatiques.
                </p>
            </field>
        </record>
        
        <!-- Action pour les scénarios climatiques -->
        <record id="action_smart_agri_scenario_climatique" model="ir.actions.act_window">
            <field name="name">Scénarios Climatiques</field>
            <field name="res_model">smart_agri_scenario_climatique</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier scénario climatique
                </p>
                <p>
                    Simulez l'impact du changement climatique sur vos cultures.
                </p>
            </field>
        </record>
        
        <!-- Action pour les scénarios RCP -->
        <record id="action_smart_agri_rcp_scenario" model="ir.actions.act_window">
            <field name="name">Scénarios IPCC RCP</field>
            <field name="res_model">smart_agri_rcp_scenario</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez les scénarios IPCC RCP
                </p>
                <p>
                    Analysez les projections climatiques futures.
                </p>
            </field>
        </record>
        
        <!-- Action pour le tableau de bord -->
        <record id="action_smart_agri_tableau_bord" model="ir.actions.act_window">
            <field name="name">Tableau de Bord</field>
            <field name="res_model">smart_agri_tableau_bord</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez votre tableau de bord
                </p>
                <p>
                    Vue d'ensemble de vos exploitations et parcelles.
                </p>
            </field>
        </record>
        
        <!-- Action pour les rotations culturales -->
        <record id="action_smart_agri_rotation_culturelle" model="ir.actions.act_window">
            <field name="name">Rotations Culturales</field>
            <field name="res_model">smart_agri_rotation_culturelle</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première rotation culturale
                </p>
                <p>
                    Planifiez la succession des cultures sur vos parcelles.
                </p>
            </field>
        </record>
        
        <!-- Action pour le dashboard agricole -->
        <record id="action_smart_agri_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard Agricole</field>
            <field name="res_model">smart_agri_dashboard</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez votre dashboard agricole
                </p>
                <p>
                    Tableau de bord complet de vos activités agricoles.
                </p>
            </field>
        </record>
        
        <!-- Action pour les prédictions IA -->
        <record id="action_smart_agri_ia_predictions" model="ir.actions.act_window">
            <field name="name">Prédictions IA</field>
            <field name="res_model">smart_agri_ia_predictions</field>
            <field name="view_mode">list,form,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez vos prédictions IA
                </p>
                <p>
                    Analysez les prédictions de rendement et de performance.
                </p>
            </field>
        </record>
        
        <!-- Action pour le simulateur IA -->
        <record id="action_smart_agri_ia_simulateur" model="ir.actions.act_window">
            <field name="name">Simulateur IA</field>
            <field name="res_model">smart_agri_ia_simulateur</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Lancez votre première simulation
                </p>
                <p>
                    Simulez différents scénarios agricoles avec l'IA.
                </p>
            </field>
        </record>
        
        <!-- Action pour la détection de stress -->
        <record id="action_smart_agri_ia_detection_stress" model="ir.actions.act_window">
            <field name="name">Détection de Stress</field>
            <field name="res_model">smart_agri_ia_detection_stress</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez la détection de stress
                </p>
                <p>
                    Détectez automatiquement le stress hydrique et climatique.
                </p>
            </field>
        </record>
        
        <!-- Action pour l'optimisation des ressources -->
        <record id="action_smart_agri_ia_optimisation_ressources" model="ir.actions.act_window">
            <field name="name">Optimisation des Ressources</field>
            <field name="res_model">smart_agri_ia_optimisation_ressources</field>
            <field name="view_mode">list,form,graph</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez l'optimisation des ressources
                </p>
                <p>
                    Optimisez l'utilisation de l'eau, des engrais et de la main-d'œuvre.
                </p>
            </field>
        </record>
        
        <!-- Action pour le dashboard IA -->
        <record id="action_smart_agri_ia_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard IA</field>
            <field name="res_model">smart_agri_ia_dashboard</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez votre dashboard IA
                </p>
                <p>
                    Tableau de bord des modèles d'intelligence artificielle.
                </p>
            </field>
        </record>
        
        <!-- Action pour les modèles IA -->
        <record id="action_smart_agri_ai_model" model="ir.actions.act_window">
            <field name="name">Modèles IA</field>
            <field name="res_model">smart_agri_ai_model</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Consultez vos modèles IA
                </p>
                <p>
                    Gérez vos modèles d'intelligence artificielle.
                </p>
            </field>
        </record>
        
        <!-- Action pour la géolocalisation (réutilise l'action des parcelles) -->
        <record id="action_smart_agri_geolocalisation" model="ir.actions.act_window">
            <field name="name">Géolocalisation</field>
            <field name="res_model">smart_agri_parcelle</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Géolocalisez vos parcelles !
                </p>
            </field>
        </record>
        
    </data>
</odoo>
