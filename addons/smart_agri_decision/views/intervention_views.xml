<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue liste pour les interventions -->
        <record id="view_smart_agri_intervention_list" model="ir.ui.view">
            <field name="name">smart.agri.intervention.list</field>
            <field name="model">smart_agri_intervention</field>
            <field name="arch" type="xml">
                <list string="Interventions Agricoles">
                    <field name="name"/>
                    <field name="type_intervention"/>
                    <field name="exploitation_id"/>
                    <field name="parcelle_id"/>
                    <field name="date_planifiee"/>
                    <field name="state"/>
                    <field name="cout_estime"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour les interventions -->
        <record id="view_smart_agri_intervention_form" model="ir.ui.view">
            <field name="name">smart.agri.intervention.form</field>
            <field name="model">smart_agri_intervention</field>
            <field name="arch" type="xml">
                <form string="Intervention Agricole">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="planifiee,en_cours,terminee"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'intervention"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations de base">
                                <field name="type_intervention"/>
                                <field name="description"/>
                                <field name="exploitation_id"/>
                                <field name="parcelle_id"/>
                                <field name="culture_id"/>
                            </group>
                            <group string="Planification">
                                <field name="date_planifiee"/>
                                <field name="date_execution"/>
                                <field name="duree_estimee"/>
                            </group>
                        </group>
                        <group>
                            <group string="Ressources et coûts">
                                <field name="main_oeuvre_requise"/>
                                <field name="cout_estime"/>
                                <field name="cout_reel"/>
                            </group>
                            <group string="Conditions météo">
                                <field name="conditions_meteo"/>
                                <field name="temperature_min"/>
                                <field name="temperature_max"/>
                                <field name="humidite_min"/>
                            </group>
                        </group>
                        <group>
                            <group string="Suivi et résultats">
                                <field name="resultats"/>
                                <field name="problemes_rencontres"/>
                            </group>
                            <group string="Notes">
                                <field name="notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue calendrier pour les interventions -->
        <record id="view_smart_agri_intervention_calendar" model="ir.ui.view">
            <field name="name">smart.agri.intervention.calendar</field>
            <field name="model">smart_agri_intervention</field>
            <field name="arch" type="xml">
                <calendar string="Calendrier des Interventions" date_start="date_planifiee" color="type_intervention">
                    <field name="name"/>
                    <field name="type_intervention"/>
                    <field name="exploitation_id"/>
                    <field name="parcelle_id"/>
                </calendar>
            </field>
        </record>

        <!-- Action pour ouvrir les interventions -->
        <record id="action_smart_agri_intervention" model="ir.actions.act_window">
            <field name="name">Interventions Agricoles</field>
            <field name="res_model">smart_agri_intervention</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Planifiez votre première intervention
                </p>
                <p>
                    Les interventions agricoles incluent semis, irrigation, traitements, récolte, etc.
                </p>
            </field>
        </record>
    </data>
</odoo>
