<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <!-- Vue liste pour les parcelles -->
        <record id="view_smart_agri_parcelle_list" model="ir.ui.view">
            <field name="name">smart.agri.parcelle.list</field>
            <field name="model">smart_agri_parcelle</field>
            <field name="arch" type="xml">
                <list string="Parcelles" decoration-success="surface > 0" decoration-warning="surface == 0">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="exploitation_id"/>
                    <field name="surface"/>
                    <field name="culture_active_id" string="Culture Active"/>
                    <field name="nombre_interventions" string="Nb Interventions"/>
                    <field name="latitude" optional="hide"/>
                    <field name="longitude" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour les parcelles -->
        <record id="view_smart_agri_parcelle_form" model="ir.ui.view">
            <field name="name">smart.agri.parcelle.form</field>
            <field name="model">smart_agri_parcelle</field>
            <field name="arch" type="xml">
                <form string="Parcelle">
                    <header>
                        <!-- Boutons temporairement commentés en attendant l'activation de PostGIS -->
                        <!-- <button name="action_import_geojson" string="Import GeoJSON" type="object" class="btn-primary"/> -->
                        <!-- <button name="action_export_geojson" string="Export GeoJSON" type="object" attrs="{'invisible': [('geo_polygon', '=', False)]}"/> -->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la parcelle"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations de base">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="exploitation_id"/>
                                <field name="description"/>
                            </group>
                            <group string="Caractéristiques">
                                <field name="surface"/>
                                <field name="type_sol_id"/>
                                <field name="forme"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Géolocalisation" name="geolocation">
                                <group>
                                    <group string="Coordonnées">
                                        <field name="latitude"/>
                                        <field name="longitude"/>
                                        <field name="altitude"/>
                                    </group>
                                    <group string="Données géospatiales">
                                        <!-- Champs PostGIS temporairement commentés -->
                                        <!-- <field name="geo_point"/> -->
                                        <!-- <field name="geo_polygon"/> -->
                                        <!-- <field name="geo_area"/> -->
                                        <!-- <field name="source_geo_data"/> -->
                                        <!-- <field name="precision_geo"/> -->
                                    </group>
                                </group>
                                <!-- Alerte et carte temporairement commentées en attendant l'activation de PostGIS -->
                                <!-- <div class="alert alert-info" role="alert" attrs="{'invisible': [('geo_polygon', '!=', False)]}">
                                    <p>Cette parcelle n'a pas encore de géométrie définie.</p>
                                    <p>Utilisez le bouton "Import GeoJSON" pour importer la géométrie de la parcelle.</p>
                                </div> -->
                                <!-- Carte Leaflet -->
                                <!-- <div class="o_leaflet_map_container" attrs="{'invisible': [('geo_polygon', '=', False)]}">
                                    <div t-ref="map" class="o_leaflet_map"></div>
                                </div> -->
                            </page>
                            <page string="Cultures">
                                <field name="culture_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Interventions">
                                <field name="intervention_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

