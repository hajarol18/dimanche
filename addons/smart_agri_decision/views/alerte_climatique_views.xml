<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <!-- Vue liste pour les alertes climatiques -->
        <record id="view_alerte_climatique_list" model="ir.ui.view">
            <field name="name">smart.agri.alerte.climatique.list</field>
            <field name="model">smart_agri_alerte_climatique</field>
            <field name="arch" type="xml">
                <list string="Alertes Climatiques">
                    <field name="name"/>
                    <field name="type_alerte"/>
                    <field name="niveau_gravite"/>
                    <field name="date_alerte"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour les alertes climatiques -->
        <record id="view_alerte_climatique_form" model="ir.ui.view">
            <field name="name">smart.agri.alerte.climatique.form</field>
            <field name="model">smart_agri_alerte_climatique</field>
            <field name="arch" type="xml">
                <form string="Alerte Climatique">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,resolved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de l'alerte"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations de base">
                                <field name="name"/>
                                <field name="type_alerte"/>
                                <field name="niveau_gravite"/>
                                <field name="description"/>
                            </group>
                            <group string="Dates">
                                <field name="date_alerte"/>
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Détails">
                                <group>
                                    <group string="Conditions météo">
                                        <field name="temperature_min"/>
                                        <field name="temperature_max"/>
                                        <field name="precipitation"/>
                                        <field name="humidite"/>
                                        <field name="vitesse_vent"/>
                                    </group>
                                    <group string="Impact">
                                        <field name="impact_cultures"/>
                                        <field name="cultures_menacees"/>
                                        <field name="parcelles_concernées"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Actions">
                                <field name="mesures_prevention"/>
                                <field name="actions_urgence"/>
                                <field name="recommandations"/>
                            </page>
                            <page string="Documentation">
                                <field name="source_alerte"/>
                                <field name="documentation"/>
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir les alertes climatiques -->
        <record id="action_alerte_climatique" model="ir.actions.act_window">
            <field name="name">Alertes Climatiques</field>
            <field name="res_model">smart_agri_alerte_climatique</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première alerte climatique
                </p>
                <p>
                    Surveillez et gérez les alertes climatiques pour protéger vos cultures.
                </p>
            </field>
        </record>
    
</odoo>