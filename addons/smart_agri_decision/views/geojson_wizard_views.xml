<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour l'assistant d'import GeoJSON -->
    <record id="view_smart_agri_geojson_wizard_form" model="ir.ui.view">
        <field name="name">smart.agri.geojson.wizard.form</field>
        <field name="model">smart_agri_geojson_wizard</field>
        <field name="arch" type="xml">
            <form string="Import GeoJSON">
                <sheet>
                    <group>
                        <field name="parcelle_id" invisible="context.get('default_parcelle_id')" required="1"/>
                        <field name="geojson_file" required="1"/>
                        <field name="file_name" invisible="1"/>
                        <field name="overwrite_existing"/>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <p>Importez un fichier GeoJSON contenant des géométries de type Point, Polygon ou MultiPolygon.</p>
                        <p>Les coordonnées doivent être en WGS84 (EPSG:4326).</p>
                        <p>Formats supportés: Point, Polygon, MultiPolygon, Feature, FeatureCollection.</p>
                    </div>
                </sheet>
                <footer>
                    <button string="Importer" name="action_import" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir l'assistant d'import GeoJSON -->
    <record id="action_smart_agri_geojson_wizard" model="ir.actions.act_window">
        <field name="name">Import GeoJSON</field>
        <field name="res_model">smart_agri_geojson_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>