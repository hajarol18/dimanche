<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue liste pour les types de sol -->
        <record id="view_smart_agri_soil_type_list" model="ir.ui.view">
            <field name="name">smart.agri.soil.type.list</field>
            <field name="model">smart_agri_soil_type</field>
            <field name="arch" type="xml">
                <list string="Types de Sol">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="water_retention"/>
                    <field name="drainage"/>
                    <field name="fertility"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire pour les types de sol -->
        <record id="view_smart_agri_soil_type_form" model="ir.ui.view">
            <field name="name">smart.agri.soil.type.form</field>
            <field name="model">smart_agri_soil_type</field>
            <field name="arch" type="xml">
                <form string="Type de Sol">
                    <sheet>
                        <group>
                            <group string="Informations de base">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="description"/>
                            </group>
                            <group string="Propriétés physiques">
                                <field name="water_retention"/>
                                <field name="drainage"/>
                                <field name="fertility"/>
                            </group>
                        </group>
                        <group>
                            <group string="Propriétés chimiques">
                                <field name="ph_min"/>
                                <field name="ph_max"/>
                                <field name="organic_matter"/>
                            </group>
                            <group string="Apparence">
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir les types de sol -->
        <record id="action_smart_agri_soil_type" model="ir.actions.act_window">
            <field name="name">Types de Sol</field>
            <field name="res_model">smart_agri_soil_type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier type de sol
                </p>
                <p>
                    Les types de sol définissent les caractéristiques physiques
                    et chimiques des sols de vos parcelles.
                </p>
            </field>
        </record>

        <!-- Menu pour les types de sol -->
        <menuitem id="menu_smart_agri_soil_type"
                  name="Types de Sol"
                  action="action_smart_agri_soil_type"
                  sequence="10"/>

    </data>
</odoo>
