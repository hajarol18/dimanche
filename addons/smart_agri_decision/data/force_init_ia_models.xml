<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ======================================== -->
        <!-- FORÇAGE PYTHON AVANCÉ DES MODÈLES IA -->
        <!-- ======================================== -->
        
        <!-- Forçage direct des modèles IA via ir.model -->
        <record id="force_ia_dashboard_model" model="ir.model">
            <field name="name">Smart Agri IA Dashboard</field>
            <field name="model">smart_agri_ia_dashboard</field>
            <field name="state">base</field>
            <field name="info">Tableau de bord IA intelligent</field>
        </record>
        
        <record id="force_ia_detection_stress_model" model="ir.model">
            <field name="name">Smart Agri IA Detection Stress</field>
            <field name="model">smart_agri_ia_detection_stress</field>
            <field name="state">base</field>
            <field name="info">Détection de stress IA</field>
        </record>
        
        <record id="force_ia_simulateur_model" model="ir.model">
            <field name="name">Smart Agri IA Simulateur</field>
            <field name="model">smart_agri_ia_simulateur</field>
            <field name="state">base</field>
            <field name="info">Simulateur IA</field>
        </record>
        
        <record id="force_ia_optimisation_ressources_model" model="ir.model">
            <field name="name">Smart Agri IA Optimisation Ressources</field>
            <field name="model">smart_agri_ia_optimisation_ressources</field>
            <field name="state">base</field>
            <field name="info">Optimisation des ressources IA</field>
        </record>
        
        <!-- Création d'exploitations et parcelles de test -->
        <record id="exploitation_test_ia_force" model="smart_agri_exploitation">
            <field name="name">Exploitation Test IA Force</field>
            <field name="description">Exploitation de test pour forcer l'initialisation des modèles IA</field>
            <field name="adresse">999 Rue Test IA Force</field>
            <field name="ville">Ville Test Force</field>
            <field name="code_postal">99999</field>
            <field name="pays">Maroc</field>
            <field name="telephone">+212999999999</field>
            <field name="email">force@ia.com</field>
            <field name="surface_totale">50.0</field>
            <field name="unite_surface">hectares</field>
            <field name="type_exploitation">mixte</field>
            <field name="statut">active</field>
        </record>
        
        <record id="parcelle_test_ia_force" model="smart_agri_parcelle">
            <field name="name">Parcelle Test IA Force</field>
            <field name="exploitation_id" ref="exploitation_test_ia_force"/>
            <field name="surface">10.0</field>
            <field name="unite_surface">hectares</field>
            <field name="type_sol">limoneux</field>
            <field name="statut">active</field>
        </record>
        
        <!-- Test ultra-minimal des modèles IA - UNIQUEMENT le nom -->
        <record id="test_ia_dashboard_force" model="smart_agri_ia_dashboard">
            <field name="name">Test Dashboard IA Force</field>
        </record>
        
        <record id="test_ia_detection_stress_force" model="smart_agri_ia_detection_stress">
            <field name="name">Test Detection Stress Force</field>
        </record>
        
        <record id="test_ia_simulateur_force" model="smart_agri_ia_simulateur">
            <field name="name">Test Simulateur IA Force</field>
        </record>
        
        <record id="test_ia_optimisation_ressources_force" model="smart_agri_ia_optimisation_ressources">
            <field name="name">Test Optimisation Ressources Force</field>
        </record>
        
    </data>
</odoo>
