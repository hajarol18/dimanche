<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ======================================== -->
        <!-- NETTOYAGE DU CACHE ODOO -->
        <!-- ======================================== -->
        
        <!-- Force la suppression de toute référence à l'ancien fichier actions.xml -->
        <record id="clean_old_actions_references" model="ir.actions.act_window">
            <field name="name">Nettoyage Cache</field>
            <field name="res_model">ir.module.module</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Nettoyage du cache Odoo
                </p>
                <p>
                    Ce fichier force Odoo à oublier les anciennes références.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
