<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <!-- Forcer la visibilité du module -->
        
        <!-- Catégorie personnalisée -->
        <record id="module_category_smart_agri" model="ir.module.category">
            <field name="name">SmartAgriDecision</field>
            <field name="description">Module d'aide à la décision agricole</field>
            <field name="sequence">10</field>
        </record>
        
        <!-- Groupe utilisateur -->
        <record id="group_smart_agri_user" model="res.groups">
            <field name="name">Utilisateur SmartAgri</field>
            <field name="category_id" ref="module_category_smart_agri"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

</odoo>
