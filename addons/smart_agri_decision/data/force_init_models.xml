<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ======================================== -->
        <!-- FORÇAGE DE L'INITIALISATION DES MODÈLES IA -->
        <!-- ======================================== -->
        
        <!-- Création d'une exploitation de test pour les relations -->
        <record id="exploitation_test_ia_init" model="smart_agri_exploitation">
            <field name="name">Exploitation Test IA Init</field>
            <field name="description">Exploitation de test pour l'initialisation des modèles IA</field>
            <field name="adresse">456 Rue Test IA Init</field>
            <field name="ville">Ville Test Init</field>
            <field name="code_postal">54321</field>
            <field name="pays">Maroc</field>
            <field name="telephone">+212987654321</field>
            <field name="email">init@ia.com</field>
            <field name="surface_totale">50.0</field>
            <field name="unite_surface">hectares</field>
            <field name="type_exploitation">mixte</field>
            <field name="statut">active</field>
        </record>
        
        <!-- Création d'une parcelle de test pour les relations -->
        <record id="parcelle_test_ia_init" model="smart_agri_parcelle">
            <field name="name">Parcelle Test IA Init</field>
            <field name="exploitation_id" ref="exploitation_test_ia_init"/>
            <field name="surface">10.0</field>
            <field name="unite_surface">hectares</field>
            <field name="type_sol">limoneux</field>
            <field name="statut">active</field>
        </record>
        
        <!-- Test minimal du modèle IA Dashboard - juste les champs obligatoires -->
        <record id="test_ia_dashboard_minimal" model="smart_agri_ia_dashboard">
            <field name="name">Test Dashboard IA Minimal</field>
            <field name="description">Test minimal pour forcer l'initialisation du modèle IA Dashboard</field>
            <field name="state">actif</field>
        </record>
        
        <!-- Test minimal du modèle IA Detection Stress - juste les champs obligatoires -->
        <record id="test_ia_detection_stress_minimal" model="smart_agri_ia_detection_stress">
            <field name="name">Test Detection Stress Minimal</field>
            <field name="description">Test minimal pour forcer l'initialisation du modèle IA Detection Stress</field>
            <field name="state">surveillance</field>
            <field name="exploitation_id" ref="exploitation_test_ia_init"/>
            <field name="type_stress">aucun</field>
        </record>
        
        <!-- Test minimal du modèle IA Simulateur - juste les champs obligatoires -->
        <record id="test_ia_simulateur_minimal" model="smart_agri_ia_simulateur">
            <field name="name">Test Simulateur IA Minimal</field>
            <field name="description">Test minimal pour forcer l'initialisation du modèle IA Simulateur</field>
            <field name="state">brouillon</field>
            <field name="scenario_rcp">rcp45</field>
        </record>
        
        <!-- Test minimal du modèle IA Optimisation Ressources - juste les champs obligatoires -->
        <record id="test_ia_optimisation_ressources_minimal" model="smart_agri_ia_optimisation_ressources">
            <field name="name">Test Optimisation Ressources Minimal</field>
            <field name="description">Test minimal pour forcer l'initialisation du modèle IA Optimisation Ressources</field>
            <field name="state">analyse</field>
            <field name="exploitation_id" ref="exploitation_test_ia_init"/>
            <field name="systeme_irrigation">goutte_goutte</field>
        </record>
        
    </data>
</odoo>
